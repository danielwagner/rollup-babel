{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "esnext",
    "module": "es2015",
    "allowJs": true,
    "noEmit": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "lib": ["es6", "dom", "dom.iterable"],
    "downlevelIteration": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
